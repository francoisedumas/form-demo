<div class="flex flex-col">

  <div class="bg-white">
    <div class="mx-auto max-w-7xl px-6 py-10 lg:px-8">
      <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Boost your Rails knowledge.<br>Start watching Kokori Kodo channel today.</h2>
      <div class="mt-10 flex items-center gap-x-6">
        <%= link_to "Get started", "https://www.youtube.com/@KokoriKodo", class:"rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600", target: '_blank' %>
      </div>
    </div>
  </div>
  <div class="bg-white">
    <div class="mx-auto max-w-7xl px-6 py-10 lg:px-8">
      <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Or scan it.</h2>
      <div class="mt-10 flex items-center gap-x-6">
        <%= @svg.html_safe %>
        <%= image_tag(@png.to_data_url) %>
      </div>
    </div>
  </div>
</div>
